<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
                android:id="@+id/suggestScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="History Suggestions"
        android:id="@+id/suggestText1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true" />

    <ListView
        android:id="@+id/suggestList1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/suggestText1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location Suggestions"
        android:id="@+id/suggestText2"
        android:layout_below="@+id/suggestList1"
        android:layout_alignStart="@+id/suggestText1"
        android:layout_marginTop="25dp" />

    <ListView
        android:id="@+id/suggestList2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/suggestText2" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/refreshButton"
        android:src="@drawable/location"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_alignEnd="@+id/suggestList1"
        android:layout_alignTop="@+id/suggestText2"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/cameraButton"
        android:src="@drawable/camera"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/suggestList2"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>