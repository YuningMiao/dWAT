<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:id="@+id/suggestScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Suggestions"
        android:id="@+id/suggestText"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"/>

    <ExpandableListView
        android:id="@+id/suggestList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/suggestText"
        android:layout_marginBottom="70dp"
        android:layout_toRightOf="@+id/swipeRight"
        android:layout_toLeftOf="@+id/swipeLeft"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/refreshButton"
        android:src="@drawable/location"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_above="@+id/suggestList"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/cameraButton"
        android:src="@drawable/camera"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:baselineAlignBottom="false"
        android:layout_alignParentBottom="true"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popupLoc"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
    </ListView>

    <ImageView
        android:src="@drawable/ss_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipeLeft"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:alpha=".75"/>

    <ImageView
        android:src="@drawable/ss_hist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipeRight"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:alpha=".75"/>

</RelativeLayout>